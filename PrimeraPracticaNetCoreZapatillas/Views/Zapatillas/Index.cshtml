@model IEnumerable<PrimeraPracticaNetCoreZapatillas.Models.Zapatilla>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado Zapatillas</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-controller="Zapatillas" asp-action="Details" asp-route-idzapatilla="@item.IdProducto" class="btn btn-dark">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
